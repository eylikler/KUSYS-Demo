@{
    var errList = new List<string>();

    if (ViewData["ErrorsList"] != null)
    {
        errList = ViewData["ErrorsList"] as List<string>;
    }
}

@if (errList.Count() > 0)
{
    <div class="tab-content rounded-bottom">
        <div class="tab-pane p-3 active preview" role="tabpanel" id="preview-1002">
            <div class="bg-light p-3">
                <div class="toast fade show" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header">
                        <svg class="docs-placeholder-img rounded me-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false">
                            <rect width="100%" height="100%" fill="#c50a2a"></rect>
                        </svg><strong class="me-auto">Hatalı Giriş</strong>
                        <button class="btn-close" type="button" data-coreui-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body">
                        <ul>
                            @foreach (var error in errList)
                            {
                                <li>@error</li>
                            }
                        </ul>
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-coreui-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>
}
else if (ViewData["Message"] != null)
{
    <div class="tab-content rounded-bottom">
        <div class="tab-pane p-3 active preview" role="tabpanel" id="preview-1002">
            <div class="bg-light p-3">
                <div class="toast fade show" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header">
                        <svg class="docs-placeholder-img rounded me-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false">
                            <rect width="100%" height="100%" fill="#c50a2a"></rect>
                        </svg><strong class="me-auto">Hatalı Giriş</strong>
                        <button class="btn-close" type="button" data-coreui-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body">
                        @ViewData["Message"]
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-coreui-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>
}